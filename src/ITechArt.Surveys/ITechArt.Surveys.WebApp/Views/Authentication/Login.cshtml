@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" asp-controller="Authentication" asp-action="Login" method="post">
                <h4>Use a local account to log in.</h4>
                <hr/>
                <div class="form-group">
                    <label asp-for="EmailOrUserName"></label>
                    <input asp-for="EmailOrUserName" class="form-control"/>
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-controller="Authentication" asp-action="Registration">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
